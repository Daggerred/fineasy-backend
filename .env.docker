# Docker Environment Configuration
ENVIRONMENT=production
DEBUG=true
PORT=8000
API_VERSION=v1
LOG_LEVEL=INFO

# Supabase Configuration (Mock for testing)
SUPABASE_URL=mock_url
SUPABASE_SERVICE_KEY=mock_service_key
SUPABASE_ANON_KEY=mock_anon_key

# Redis Configuration (Optional)
REDIS_URL=redis://localhost:6379
REDISHOST=localhost
REDISPORT=6379
ENABLE_REDIS=false

# AI Service Configuration (Optional for testing)
GEMINI_API_KEY=mock_gemini_key
GEMINI_MODEL=gemini-pro
AI_TIMEOUT=30
MAX_TOKENS=2000
ENABLE_AI_FEATURES=false

# Security Configuration
SECRET_KEY=docker-test-secret-key-min-32-chars-long
JWT_SECRET=docker-test-jwt-secret-key
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=1440

# CORS Configuration
ALLOWED_ORIGINS=["http://localhost:3000", "http://localhost:8080", "*"]
ALLOWED_HOSTS=["localhost", "127.0.0.1", "0.0.0.0"]

# Feature Flags
FRAUD_DETECTION_ENABLED=true
PREDICTIVE_ANALYTICS_ENABLED=true
COMPLIANCE_CHECKING_ENABLED=true
NLP_INVOICE_ENABLED=true
ENABLE_CV_PARSING=true

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_DIR=./uploads
ALLOWED_EXTENSIONS=["pdf", "txt", "jpg", "png", "xlsx", "csv"]

# Processing Configuration
MAX_CONCURRENT_REQUESTS=10
REQUEST_TIMEOUT_SECONDS=30
BATCH_SIZE=100

# Rate Limiting
RATE_LIMIT_PER_MINUTE=100
RATE_LIMIT_BURST=200

# Development Settings
DEBUG_MODE=true
ENABLE_CORS=true
ENABLE_METRICS=true