# Environment Configuration
ENVIRONMENT=production
DEBUG=false
HOST=0.0.0.0
PORT=8000

# Supabase Configuration
# Get these from https://supabase.com/dashboard/project/your-project/settings/api
SUPABASE_URL=https://your-project-id.supabase.co
SUPABASE_SERVICE_KEY=your_service_role_key_here
SUPABASE_ANON_KEY=your_anon_key_here

# CORS Configuration
# Add your app domains here (comma-separated)
CORS_ORIGINS=https://your-domain.com,https://www.your-domain.com,http://localhost:3000

# AI Configuration (Optional)
AI_API_KEY=your_ai_api_key_if_needed

# Logging
LOG_LEVEL=INFO

# Security
SECRET_KEY=your_secret_key_for_jwt_if_needed