# Staging Environment Configuration
ENVIRONMENT=staging

# API Configuration
API_VERSION=v1
LOG_LEVEL=DEBUG
WORKERS=2

# Feature Flags
FRAUD_DETECTION_ENABLED=true
PREDICTIVE_ANALYTICS_ENABLED=true
COMPLIANCE_CHECKING_ENABLED=true
NLP_INVOICE_ENABLED=true

# Performance Settings
CACHE_TTL_HOURS=12
FRAUD_MODEL_THRESHOLD=0.80
PREDICTION_CONFIDENCE_MIN=0.65

# Security Settings
ALLOWED_ORIGINS=["https://staging.yourdomain.com", "http://localhost:3000"]
JWT_SECRET_KEY=staging-jwt-secret
ENCRYPTION_KEY=staging-encryption-key

# Database Configuration
# These should be set as environment variables or secrets
# SUPABASE_URL=
# SUPABASE_SERVICE_KEY=
# SUPABASE_ANON_KEY=

# Redis Configuration
REDIS_URL=redis://redis:6379
REDIS_MAX_CONNECTIONS=10
REDIS_RETRY_ON_TIMEOUT=true

# External Services
GST_API_URL=https://staging-api.gst.gov.in
# GST_API_KEY=

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090
HEALTH_CHECK_INTERVAL=15

# ML Model Configuration
ML_MODEL_PATH=/app/ml_models
MODEL_CACHE_SIZE=3
MODEL_TIMEOUT_SECONDS=30

# Audit and Compliance
AUDIT_LOG_RETENTION_DAYS=90
DATA_RETENTION_DAYS=365
ENABLE_AUDIT_LOGGING=true

# Rate Limiting
RATE_LIMIT_PER_MINUTE=200
RATE_LIMIT_BURST=50

# Timeouts
REQUEST_TIMEOUT_SECONDS=45
DATABASE_TIMEOUT_SECONDS=15
CACHE_TIMEOUT_SECONDS=10