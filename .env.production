# Production Environment Configuration
ENVIRONMENT=production

# API Configuration
API_VERSION=v1
LOG_LEVEL=INFO
WORKERS=4

# Feature Flags
FRAUD_DETECTION_ENABLED=true
PREDICTIVE_ANALYTICS_ENABLED=true
COMPLIANCE_CHECKING_ENABLED=true
NLP_INVOICE_ENABLED=true

# Performance Settings
CACHE_TTL_HOURS=24
FRAUD_MODEL_THRESHOLD=0.85
PREDICTION_CONFIDENCE_MIN=0.7

# Security Settings
ALLOWED_ORIGINS=["https://yourdomain.com", "https://app.yourdomain.com"]
JWT_SECRET_KEY=your-production-jwt-secret
ENCRYPTION_KEY=your-production-encryption-key

# Database Configuration
# These should be set as environment variables or secrets
# SUPABASE_URL=
# SUPABASE_SERVICE_KEY=
# SUPABASE_ANON_KEY=

# Redis Configuration
REDIS_URL=redis://redis:6379
REDIS_MAX_CONNECTIONS=20
REDIS_RETRY_ON_TIMEOUT=true

# External Services
GST_API_URL=https://api.gst.gov.in
# GST_API_KEY=

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090
HEALTH_CHECK_INTERVAL=30

# ML Model Configuration
ML_MODEL_PATH=/app/ml_models
MODEL_CACHE_SIZE=5
MODEL_TIMEOUT_SECONDS=30

# Audit and Compliance
AUDIT_LOG_RETENTION_DAYS=365
DATA_RETENTION_DAYS=2555  # 7 years for financial data
ENABLE_AUDIT_LOGGING=true

# Rate Limiting
RATE_LIMIT_PER_MINUTE=100
RATE_LIMIT_BURST=20

# Timeouts
REQUEST_TIMEOUT_SECONDS=30
DATABASE_TIMEOUT_SECONDS=10
CACHE_TIMEOUT_SECONDS=5